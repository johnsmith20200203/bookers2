<h2>User info</h2>
<table class='table'>
  <tr>
    <%= image_tag attachment_url(@user, :image, :fill, 100, 100, fallback: "default-image_L.jpeg", format: "jpg") %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to '', edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
</div>
