<h2>Books</h2>

<!--HACK: books/indexと同じ実装のため共通化する-->
<table class='table table-hover table-inverse'>
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @user.books.each do |book| %>
    <tr>
      <td></td>
      <td><%= link_to book.title, book %></td>
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
  </tbody>
</table>
