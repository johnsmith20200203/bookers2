<h2>Books</h2>

<!--HACK: books/indexと同じ実装のため共通化する-->
<table class='table table-hover table-inverse'>
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @user.books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= image_tag attachment_url(@user, :profile_image, :fill, 80, 80, fallback: "default-image_S.jpeg", format: "jpg") %>
        <% end %>
      </td>
      <td><%= link_to book.title, book %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
