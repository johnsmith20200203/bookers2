<%= form_with(model: book, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :opinion %>
    <%= form.text_area :opinion, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-success' %>
  </div>

<% end %>
